{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@stylistic/disable-legacy"
    ],
    "plugins": [
        "html",
        "@stylistic"
    ],
    "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "@stylistic/nonblock-statement-body-position": ["error", "below"],
        "@stylistic/semi": "error"
    }
}
